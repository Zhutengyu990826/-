/* component/headers.wxss */
.header {
	width: 100%;
	height: 100rpx;
	background-color: white;
	display: flex;
	align-items: center;
	padding: 0 20rpx;
	box-sizing: border-box;
	border-top: 1rpx solid #aaa;
	position: fixed;
	top: 0;
	z-index: 3;
}

.header-left {
	width: 500rpx;
	height: 100%;
	display: flex;
	align-items: center;
}

.header-brand1 {
	height: 100%;
	width: 350rpx;
	padding: 20rpx 0;
	box-sizing: border-box;
}

.header-brand1 .header-brand1-img {
	width: 100%;
	height: 100%;
}

.header-brand2 {
	height: 100%;
	width: 150rpx;
	padding: 30rpx 20rpx;
	box-sizing: border-box;
}

.header-brand2 .header-brand2-img {
	width: 100%;
	height: 100%;
}

.act-banner {
	width: 100%;
	height: 85rpx;
	position: fixed;
	top: 100rpx;
	z-index: 3;
}

.act-banner .act-banner-img {
	width: 100%;
	height: 100%;
}

.header-swiper {
	height: 100%;
	text-align: center;
}

.header-right {
	width: 100%;
	height: 100rpx;
	padding: 20rpx 0 20rpx 35rpx;
	box-sizing: border-box;
}

.header-swiper {
	width: 100%;
	height: 100%;

}

.header-swiperItem1 {
	box-sizing: border-box;
}

.header-swiperItem1 .header-swiperItem1-img {
	width: 100%;
	height: 90%;
}

.header-swiperItem2 {
	display: flex;
	align-items: center;
	justify-content: space-around;
	overflow: hidden;
}

.header-swiperItem2 {
	font-size: 30rpx;
	font-weight: 500;
}