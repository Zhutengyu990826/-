.bodyBox {
	background-color: #ddd;
}



/* 轮播图 */
.swiper {
	width: 100%;
	height: 300rpx;
	background-color: white;
	margin-top: 185rpx;
}

.swiperItem,
.swiperItem image {
	width: 100%;
	height: 100%;
}

/* 免费教程 */
.subMenuList {
	width: 750rpx;
	height: 320rpx;
	background-color: white;
	display: flex;
	flex-wrap: wrap;
	padding: 15rpx 0;

}

.list-item {
	width: 25%;
	height: 160rpx;
	text-align: center;
	display: flex;
	flex-wrap: wrap;
	justify-content: center;
	align-items: center;
}

.list-img {
	width: 96rpx;
	height: 96rpx;
}

.list-img image {
	width: 100%;
	height: 100%;
}

.list-text {
	font-size: 25rpx;
	margin-top: -10rpx;
}

/* 大触直播 */
.liveBox {
	margin-top: 20rpx;
	width: 100%;
	background-color: white;
}

.liveBox-title {
	width: 100%;
	height: 70rpx;
	display: flex;
	justify-content: space-between;
	padding: 0 20rpx;
	align-items: center;
	box-sizing: border-box;
	border-bottom: 2rpx solid #ddd;
}

.liveBox-name {
	font-size: 28rpx;
	color: black;
	font-weight: 500;
}

.liveBox-more {
	font-size: 25rpx;
	color: #aaa;
}

.liveBox-box {
	padding: 20rpx;
	box-sizing: border-box;
}

.liveBox-subject {
	width: 100%;
	background-color: white;
	padding: 20rpx;
	box-sizing: border-box;
	box-shadow: 0rpx 0rpx 20rpx 0rpx #ddd;
	border-radius: 10rpx;
}

.subject-header {
	display: flex;
	justify-content: left;
	align-items: center;
	font-size: 25rpx;
}

.subject-header image {
	width: 40rpx;
	height: 40rpx;
	border-radius: 50%;
	margin-right: 20rpx;
}

.subject-title {
	font-size: 30rpx;
	font-weight: bold;
	margin: 10rpx 0;
}

.liveBox-subject video {
	width: 100%;
	height: 100%;
}

.subject-video {
	width: 100%;
	height: 370rpx;
	border-radius: 15rpx;
	overflow: hidden;
}

.subject-details {
	font-size: 23rpx;
	margin-top: 10rpx;
	color: #aaa;
}

.disflex {
	display: flex;
	justify-content: space-between;
}

.liveBox-tuijian {
	display: flex;
	justify-content: space-between;
}

.liveBox-tuijianItem {
	width: 48.5%;
	background-color: white;
	margin-top: 20rpx;
	padding: 20rpx;
	box-sizing: border-box;
	box-shadow: 0rpx 0rpx 20rpx 0rpx #ddd;
	border-radius: 10rpx;
}

.tuijian-img {
	width: 100%;
	height: 225rpx;
	border-radius: 15rpx;
	overflow: hidden;
}

.tuijian-img image {
	width: 100%;
	height: 100%;
}

.subject-details view {
	margin: 10rpx 0;
}

/* 热门教程 */
.hot {
	margin-top: 20rpx;
	width: 100%;
	background-color: white;
}

.hotBox {
	width: 100%;
	display: flex;
	flex-wrap: wrap;
	padding: 0 15rpx;
	box-sizing: border-box;
}

.hot-item {
	width: 50%;
	padding: 10rpx;
	box-sizing: border-box;
}

.hot-itemImg,
.hot-itemImg image {
	width: 100%;
	height: 260rpx;
}

.hot-itemText {
	margin: 10rpx 0;
	font-size: 25rpx;
	font-weight: 600;
}

/* 问答专区 */
.QA {
	margin-top: 20rpx;
	width: 100%;
	background-color: white;
}

.QA-Box {
	padding: 0 20rpx;
	width: 100%;
	box-sizing: border-box;
	background-color: white;
}

.QA-Item {
	border-bottom: 2rpx solid rgb(141, 141, 141);
	margin-top: 35rpx;
}

.QA-header {
	display: flex;
	justify-content: left;
	align-items: center;
	font-size: 35rpx;
}

.QA-header image {
	width: 60rpx;
	height: 60rpx;
	border-radius: 50%;
	margin-right: 20rpx;
}

.QA-title {
	font-size: 35rpx;
	font-weight: 600;
	
	display: flex;
	align-items: center;
}
.QA-titleText {
	width: 90%;
	-webkit-line-clamp: 1;
	display: -webkit-box;
	overflow: hidden;
	text-overflow: ellipsis;
	-webkit-box-orient: vertical;
}
.QA-title .wen {
	width: 40rpx;
	height: 40rpx;
	background-color: rgb(0, 162, 255);
	text-align: center;
	line-height: 40rpx;
	border-radius: 10rpx;
	font-weight: normal;
	color: white;
	font-size: 28rpx;
	margin-right: 15rpx;
}

.QA-content {
	width: 100%;
	height: 130rpx;
	margin-top: 10rpx;
	display: flex;
	justify-content: space-between;
}

.QA-contentText {
	width: 80%;
	-webkit-line-clamp: 3;
	display: -webkit-box;
	overflow: hidden;
	text-overflow: ellipsis;
	-webkit-box-orient: vertical;
	font-size: 31rpx;
}

.QA-contentImg {
	width: 18.5%;
	height: 100%;
	overflow: hidden;
	border-radius: 13rpx;
}

.QA-contentImg image {
	width: 100%;
	height: 100%;
}

.main-layout {
	width: 100%;
	background-color: #f7f7f7;
	padding: 15rpx 20rpx;
	box-sizing: border-box;
	margin: 15rpx 0 30rpx 0;
}

.teacher-info {
	display: flex;
	align-items: center;
	margin-bottom: 15rpx;
}

.teacher-info image {
	width: 40rpx;
	height: 40rpx;
	overflow: hidden;
	border-radius: 50%;
	margin-right: 12rpx;
}

.t-nickname {
	font-size: 27rpx;
	color: #3f4345;
	line-height: 27rpxs;
	margin-right: 12rpx;
}

.t-adopted_qa {
	background-color: rgb(255, 234, 95);
	padding: 7rpx 17rpx;
	font-size: 20rpx;
	border-radius: 20rpx;
}

.t-content {
	-webkit-line-clamp: 2;
	display: -webkit-box;
	overflow: hidden;
	text-overflow: ellipsis;
	-webkit-box-orient: vertical;
	font-size: 28rpx;
	color: #5b6164;
}

/* 素材下载 */
.material-download {
  width: 750rpx;
  height: 545rpx;
  background-color: white;
	overflow: hidden;
	margin-top: 20rpx;
}
.material-item {
  width: 100%;
  height: 30%;
  margin-left: 20rpx;
  /* background-color: wheat; */
  border-bottom:2rpx solid #ccc;
  padding: 20rpx 40rpx 20rpx 0;
  box-sizing: border-box;
